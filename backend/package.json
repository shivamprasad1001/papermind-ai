{
  "name": "papermind-ai-backend",
  "version": "1.0.0",
  "description": "PaperMind AI Backend - PDF processing and AI chat with documents",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "node -e \"if (require('fs').existsSync('dist')) require('fs').rmSync('dist', { recursive: true, force: true })\" && tsc",
    "start": "node dist/server.js",
    "test": "node test-endpoints.js",
    "test:endpoints": "node test-endpoints.js"
  },
  "keywords": [
    "ai",
    "pdf",
    "chat",
    "pinecone",
    "gemini",
    "express",
    "typescript"
  ],
  "author": "Shivam Prasad",
  "license": "MIT",
  "dependencies": {
    "@google/genai": "^1.15.0",
    "@pinecone-database/pinecone": "^2.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "pdf-parse": "^1.1.1",
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/multer": "^1.4.12"
  },
  "devDependencies": {
    "@types/pdf-parse": "^1.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
